extends ../layouts/main-layout.pug


block content

        .row  
            .col-md-3 
                img(src=`/img/${product.imageUrl}` alt=`${product.description}`).img-fluid 

            .col-md-9
                h1.mb-3 #{product.name}
                hr
                a(href="").btn.btn-link.p-0.mn-3.text-dark Telefon 
                .mb-3 
                    h4.text-dark.mb-3 #{product.price} TL
                    button(type="submit").btn.btn-secondary.btn-lg Add to Cart

        .row  
            .col-md-12 
                hr 
                p.p-3 #{product.description} 
                
       
        
